<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
 	  <h1>Nuevo Producto</h1>
 	  <%= form_for @product do |product|%>
 	    <div class="form-group">
 	      <%= product.text_field :name, class:"form-control input-lg", placeholder: "Producto"%>
 	    </div>
 	    <div class="form-group">
 	      <%= product.text_field :price, class:"form-control input-lg", placeholder:"Precio"%>
 	    </div>
        


 	    <div>
 	      <%= product.submit "Crea Producto", class: "btn btn-primary btn-lg btn-block"%>
 	    </div>
 	  <% end %>
    	
    </div>
  </div>
</div>
