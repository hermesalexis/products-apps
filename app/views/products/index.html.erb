<div class="container">
  <div class="row">
  	<div class="col-sm-8 col-sm-offset-2">
  	  <h1>Productos</h1>
  	  <%= link_to "Nuevo Producto", new_product_path, class: "btn btn-primary pull-right " %>
  	  <table class="table table-hover">
  	  	<thead>
  	      <tr>
  	        <th>Nombre</th>
  	        <th>Precio</th>
  	        <th>Categor√≠as</th>
  	        <th></th>
  	        <th></th>
  	      </tr>
  	  	</thead>
  	  	<tbody>
  	  		<% @products.each do |product|%>
            <tr>
              <td><%= product.name %></td>
              <td><%= product.price %> </td>
              <td>
               <% product.categories.each do|category| %>
                 <%= "#{category.name}" %>
                 <% unless product.categories.last.name == category.name %>
                  <%= ", " %>
                 <% end %>
               <% end %>  
              </td>
              <td><%= link_to "Editar", edit_product_path(product)%></td>
              <td><%= link_to "Eliminar", product_path(product), method: :delete%></td>
            </tr>
          <% end %>
  	  	</tbody>
  	  </table>
  	</div>
  </div>
</div>