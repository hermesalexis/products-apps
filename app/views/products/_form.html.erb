<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
 	  <h1><%= form_title %></h1>
 	  <%= form_for @product do |product|%>
 	    <div class="form-group">
 	      <%= product.text_field :name, class:"form-control input-lg", placeholder: "Producto"%>
 	    </div>
 	    <div class="form-group">
 	      <%= product.text_field :price, class:"form-control input-lg", placeholder:"Precio"%>
 	    </div>
        
        <div class="form-group">
         <%= hidden_field_tag "product[category_ids][]", nil%>
         <% @categories.each do |category| %>
          <%= check_box_tag "product[category_ids][]", category.id, @product.category_ids.include?(category.id)%>
          <%= category.name %><br>
         <% end %>
        	
        </div>

 	    <div>
 	      <%= product.submit form_title, class: "btn btn-primary btn-lg btn-block"%>
 	    </div>
 	  <% end %>
    	
    </div>
  </div>
</div>
