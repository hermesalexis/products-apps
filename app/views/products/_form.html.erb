<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
 	  <h1><%= form_title %></h1>
 	  <%= form_for @product do |product|%>
 	    <div class="form-group">
 	      <%= product.text_field :name, class:"form-control input-lg", placeholder: "Producto"%>
 	    </div>
 	    <div class="form-group">
 	      <%= product.text_field :price, class:"form-control input-lg", placeholder:"Precio"%>
 	    </div>

      <%= product.collection_check_boxes :category_ids, Category.all, :id, :name do |c| %>
       <div class="checkbox">
         <%= c.label do %>
          <%= c.check_box %> <%= c.object.name %>
         <% end %>
       </div>
      <% end %>

 	    <div>
 	      <%= product.submit form_title, class: "btn btn-primary btn-lg btn-block"%>
 	    </div>
 	  <% end %>
    	
    </div>
  </div>
</div>
